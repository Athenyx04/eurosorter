---
import { playlists } from "../lib/data";
import Layout from "../layouts/Layout.astro";
import RankingComponent from "../components/Ranking";

const songs = playlists[0].songs;
---

<Layout title="Ranking | Eurovision Place">
  <div class="flex flex-col w-full">
    <div class="flex px-4 py-2 items-center">
      <h1 class="font-extrabold">My Eurovision 2024</h1>
      <button class="bg-[#5365a6] hover:bg-blue-500 text-white font-bold py-2 px-4 rounded ml-auto">
        Share
      </button>
    </div>
    <RankingComponent client:load songList={songs} />
  </div>
</Layout>