---
import Header from '../components/Header.astro'
import Player from '../components/Player.tsx'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Sort the Eurovision Song Contest 2024 songs based on your preferences, in a 1v1 battle system, and discover your favourite to win!'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicon.ico' />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/gh/lipis/flag-icons@7.1.0/css/flag-icons.min.css'
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <meta property='og:type' content='website' />
    <meta property='og:title' content='Eurovision Place' />
    <meta property='og:url' content='https://www.eurovision.place/' />
    <meta
      property='og:image'
      content='https://www.eurovision.place/banner.png'
    />
    <meta
      property='og:description'
      content='Sort the Eurovision Song Contest 2024 songs based on your preferences, in a 1v1 battle system, and discover your favourite to win!'
    />
    <title>{title}</title>
  </head>
  <body class='flex min-h-[100dvh] flex-col bg-gray-900'>
    <Header />
    <main class='flex grow'>
      <slot />
    </main>
    <Player client:load />
  </body>
</html>

<style is:global>
  html {
    color: white;
    color-scheme: dark light;
  }
</style>
