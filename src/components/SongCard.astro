---
import AudioPlayer from './AudioPlayer.jsx'

interface Props {
	artist: string;
	title: string;
	country: string;
	countryCode: string;
	previewUrl: string;
}

const { artist, title, country, countryCode, previewUrl } = Astro.props;
---

<div class="flex flex-col gap-4 md:flex-row md:justify-between items-center rounded-lg shadow-md p-4 border border-gray-300 select-none transform transition-all duration-200 hover:scale-105 active:bg-blue-900">
	<div class="grow px-2">
		<h1 class="text-2xl font-bold">{title}</h1>
		<p class="text-lg">{artist}</p>
		<p class="text-sm flex items-center">
			<img src={`https://www.flagsapi.com/${countryCode}/flat/64.png`} alt={country} class="inline-block w-4 h-4 mr-1" />
			{country}
		</p>
	</div>
	<AudioPlayer client:load src={previewUrl} />
</div>