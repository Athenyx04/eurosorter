---
import type { Artist, Country } from '@/lib/data';
import PlayPauseButton from './PlayPauseButton'

interface Props {
	artist: Artist;
	title: string;
	country: Country;
	audioUrl: string;
}

const { artist, title, country, audioUrl } = Astro.props;
---

<div 
	class="w-full sm:w-1/2 flex grow flex-col bg-cover bg-center" 
	style={{backgroundImage: `url(${artist.imageUrl})`}}
>
	<div class="flex grow p-4 bg-black/40 hover:bg-black/60 transition-all">
		<div class="flex flex-col grow px-2 justify-center">
			<h1 class="text-2xl tracking-tight font-extrabold">{title}</h1>
			<p class="text-lg font-light">{artist.name}</p>
			<p class="text-sm flex items-center font-semibold">
				<img src={`https://www.flagsapi.com/${country.code}/flat/64.png`} alt=`Bandera de ${country.name}` class="inline-block w-8 h-8 mr-1" />
				{country.name}
			</p>
		</div>
		<div class="flex items-center justify-center">
			<PlayPauseButton client:visible src={audioUrl} />
		</div>
	</div>
</div>