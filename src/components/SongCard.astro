---
import AudioPlayer from './AudioPlayer.jsx'

interface Props {
	artist: string;
	title: string;
	country: string;
	countryCode: string;
	previewUrl: string;
	imageUrl: string;
}

const { artist, title, country, countryCode, previewUrl, imageUrl } = Astro.props;
---

<div class="w-full sm:w-1/2 flex grow flex-col bg-cover bg-center" style={{backgroundImage: `url(${imageUrl})`}}>
	<div class="flex grow p-4 bg-black bg-opacity-40 hover:bg-opacity-60 transition-all">
		<div class="flex flex-col grow px-2 justify-center">
			<h1 class="text-2xl tracking-tight font-extrabold">{title}</h1>
			<p class="text-lg font-light">{artist}</p>
			<p class="text-sm flex items-center font-semibold">
				<img src={`https://www.flagsapi.com/${countryCode}/flat/64.png`} alt=`Bandera de ${country}` class="inline-block w-8 h-8 mr-1" />
				{country}
			</p>
		</div>
		<div class="flex items-center justify-center">
			<AudioPlayer client:load src={previewUrl} />
		</div>
	</div>
</div>